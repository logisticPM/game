# 环境变量配置示例
# 复制此文件为 .env 并根据需要修改

# 开发模式配置
VITE_DEV_MODE=true

# 游戏配置
VITE_GAME_DEBUG=true
VITE_GAME_LOG_LEVEL=debug

# 资产配置
VITE_ASSETS_BASE_PATH=/GameAssets
VITE_USE_SPRITE_SHEETS=true

# 性能配置
VITE_ENABLE_PERFORMANCE_MONITOR=true
VITE_MAX_FPS=60

# AI 配置
VITE_AI_DIFFICULTY=medium
VITE_AI_THINKING_TIME=1000

# 网络配置 (未来功能)
# VITE_MULTIPLAYER_ENABLED=false
# VITE_WEBSOCKET_URL=ws://localhost:8080